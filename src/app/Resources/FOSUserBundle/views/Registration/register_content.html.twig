
<form  action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-register">
    <h2 class="form-signin-heading">Registration</h2>
    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': "Email address"} }) }}
    {{ form_errors(form.email)}}
    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': "Password"} }) }}
    {{ form_errors(form.plainPassword.first)}}
    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': "Confirmation password"} }) }}
    {{ form_widget(form._token) }}
    <button class="btn btn-primary btn-block" type="submit">Register</button>
    <hr/>
    <a href="{{ path('fos_user_security_login')}}">Sign In</a>
</form>