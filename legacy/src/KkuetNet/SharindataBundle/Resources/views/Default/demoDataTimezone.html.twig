                    {{ json_data2.date|date('Y-m-d H:i') }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    Location
                </div>
                <div class="col-lg-8">
                    Latitude: {{ json_data2.location.latitude }} ; Longitude: {{ json_data2.location.longitude }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    Countries
                </div>
                <ul class="col-lg-8">
                    {% for c in json_data2.countries %}
                        <li><img src="/bundles/kkuetnetsharindata/images/flags/64/{{ c.iso }}.png"/></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}